<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - J J Trailer</title>
    @Styles.Render("~/Content/css")
            @Scripts.Render("~/bundles/modernizr")
            <link href="~/Content/PagedList.css" rel="stylesheet" />
        <link href="~/Areas/Admin/Content/CSS/AdminMenu.css" rel="stylesheet" />
    <link href="~/Content/redactor/redactor.css" rel="stylesheet" />


    <script src="~/Scripts/jquery-2.1.3.js"></script>
    <script src="~/Scripts/redactor/redactor.js"></script>
</head>
<body>
    <div class="row">
        <div class="navbar  navbar-static-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("JJ Trailer Admin Control Panel", "Index", "Default", new { area = "Admin" }, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                       
                        <li>@Html.ActionLink("Store Front", "Index", "Home", new { area = "" }, null)</li>

                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2 " >
         

            <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true" >
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingzero">
                        <h4 class="panel-title">
                            <a data-toggle="collapse" data-parent="#accordion" href=@Url.Action("Index", "Default", new { area = "Admin" },null)
                               aria-expanded="true" aria-controls="collapsezero">
                                Dashboard
                            </a>
                        </h4>
                    </div>
                   
                </div>

                <div class="panel panel-default" >
                    <div class="panel-heading" role="tab" id="headingOne" >
                        <h4 class="panel-title" >
                            <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Catalog
                            </a>
                        </h4>
                    </div>
                    <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
                        <div class="panel-body">

                            <ul class="nav  nav-stacked ">
                                <li role="presentation" class="active"><a href=@Url.Action("Index", "Categories", new { area = "Admin" },null)>Categories</a></li>
                                <li role="presentation"><a href=@Url.Action("Index", "Products", new { area = "Admin" },null)>Products</a></li>
                                <li role="presentation"><a href=@Url.Action("Index", "Manufacturers", new { area = "Admin" },null)>Manufacturers</a></li>
                            </ul>


                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingTwo">
                        <h4 class="panel-title">
                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Extensions
                            </a>
                        </h4>
                    </div>
                    <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
                        <div class="panel-body">
                            <ul class="nav  nav-stacked ">
                                <li role="presentation" class="active"><a href="#1">Shipping</a></li>
                                <li role="presentation"><a href="#2">Payments</a></li>
                                <li role="presentation"><a href="#3">Taxes</a></li>
                            </ul>

                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingThree">
                        <h4 class="panel-title">
                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Sales
                            </a>
                        </h4>
                    </div>
                    <div id="collapseThree" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingThree">
                        <div class="panel-body">
                            <ul class="nav  nav-stacked ">
                                <li role="presentation" class="active"><a href="#1">Orders</a></li>
                                <li role="presentation" class="active"><a href="#1">Returns</a></li>
                                <li role="presentation" class="active"><a href="#1">Customers</a></li>
                                <li role="presentation" class="active"><a href="#1">Coupons</a></li>
                                <li role="presentation" class="active"><a href="#1">Newsletter</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading" role="tab" id="headingFour">
                        <h4 class="panel-title">
                            <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Miscellaneous
                            </a>
                        </h4>
                    </div>
                    <div id="collapseFour" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingFour">
                        <div class="panel-body">
                            <ul class="nav  nav-stacked ">
                                <li role="presentation" class="active"><a href="#1">Dimensions Class</a></li>
                                <li role="presentation" class="active"><a href="#1">Weight Class</a></li>
                                <li role="presentation" class="active"><a href="#1">Tax Class</a></li>
                                <li role="presentation" class="active"><a href="#1">Out of Stock Class</a></li>
                                
                            </ul>
                        </div>
                    </div>
                </div>
                </div>



            </div>




       
        <div class="col-md-10">
            <div class="container body-content">
                @RenderBody()
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - J & J Trailer Sales and Manufacturing</p>
                </footer>
            </div>
        </div>
    </div>
  
    @Scripts.Render("~/bundles/bootstrap")

    @RenderSection("scripts", required: false)
</body>
</html>